
<h1 class="text-center">Welcome to our flight booker!</h1>

<%= render "flights/search_form", flight: @flight %>

  <% if @found_flights && @found_flights.count > 0 %>
<table>
  <thead>
    <tr>
      <th>Duration</th>
      <th>Departure date</th>
      <th>Departure</th>
      <th>Arrival</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @found_flights.each do |flight| %>
      <tr>
        <td><%= flight.duration %></td>
        <td><%= flight.departure_date %></td>
        <td><%= flight.from.code %></td>
        <td><%= flight.to.code %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% elsif @random_flight %>
    <p>No flights found, go ahead and search!</p>
    <h2>Recommended flight:</h2>
    <td><%= @random_flight.duration %></td>
    <td><%= @random_flight.departure_date %></td>
    <td><%= @random_flight.from.code %></td>
    <td><%= @random_flight.to.code %></td>
  <% end %>
  </tbody>
</table>

<br>

